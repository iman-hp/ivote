<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="end"
    android:gravity="end"
    android:padding="10dp"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginBottom="2dp"
            android:background="@drawable/shape_of_award_red"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:text="نظرسنجی بهترین فیلم های سال"/>
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/vote_cinema"
            android:layout_width="76dp"
            android:layout_marginEnd="8dp"
            android:layout_height="76dp"
            android:src="@drawable/sarabahrami"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>
        </LinearLayout>

    <LinearLayout
        android:background="@drawable/shape_of_award_blue"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:text="نظرسنجی بهترین بازیگران بازیگران مرد"/>
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/vote_actorwoman"
            android:layout_width="76dp"
            android:layout_marginEnd="8dp"
            android:layout_height="76dp"
            android:src="@drawable/sarabahrami"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:gravity="end"
        android:background="@drawable/shape_of_award_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:text="نظرسنجی بهترین بازیگران بازیگران زن"/>
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/vote_menactor"
            android:layout_width="76dp"
            android:layout_marginEnd="8dp"
            android:layout_height="76dp"
            android:src="@drawable/sarabahrami"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>
    </LinearLayout>


    </LinearLayout>

